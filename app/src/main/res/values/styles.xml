<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/cerebrisansregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
            <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="colorPrimaryDark">@color/statusBar</item>

    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="android:maxWidth">1000dp</item>
        <item name="closeIconTint">@color/white</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <item name="hintTextColor">@color/white</item>
        <item name="queryHint">@string/search_hint</item>
    </style>

</resources>